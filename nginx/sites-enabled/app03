server {

    server_name uhlbriccsapp03.xuhl-tr.nhs.uk;
    listen 443;
    ssl on;

    ssl_certificate /cert/uhlbriccsapp03.xuhl-tr.nhs.uk.cer;
    ssl_certificate_key /cert/uhlbriccsapp03.xuhl-tr.nhs.uk.key;

    client_body_in_file_only clean;
    client_body_buffer_size 32K;
    client_max_body_size 32M;

    location /redcap_live_copy {
        proxy_pass http://uhlbriccsapp03:84/redcap_live_copy;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

}

server {
    server_name uhlbriccsapp03;
    listen 443;

    return 301 https://uhlbriccsapp03.xuhl-tr.nhs.uk$request_uri;
}

server {
    listen 80 default_server;

    server_name _;

    return 301 https://$host$request_uri;
}
